@model System.Data.DataTable
@{
    ViewBag.Title = "Wszystkie Produkty";
}


<table class="table table-bordered table-striped" style="margin-top: 5rem;">
    <tr>
        <th>Kategoria</th>
        <th>Podkategoria</th>
        <th>Nazwa</th>
        <th>Cena netto</th>
        <th>Podatek</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
        </tr>
    }
</table>




